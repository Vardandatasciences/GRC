name: Frontend CI with Cypress Tests

on:
  push:
    branches: [ loukya ]    # <-- Set your actual branch here
  pull_request:
    branches: [ loukya ]

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm ci
        working-directory: ./frontend

      - name: Build frontend
        run: npm run build
        working-directory: ./frontend

      - name: Install serve globally
        run: npm install -g serve

      - name: Start static server in background
        run: nohup serve -s ./frontend/dist -l 5000 > serve.log 2>&1 &
        working-directory: .

      - name: Wait for server to be ready
        uses: jakejarvis/wait-action@v0.1.2
        with:
          url: http://localhost:5000
          timeout: 120

      - name: Check server is up
        run: curl -I http://localhost:5000

      - name: Install Cypress
        run: npm install cypress
        working-directory: ./frontend

      - name: Run Cypress tests
        run: npx cypress run --config baseUrl=http://localhost:5000
        working-directory: ./frontend

      - name: Upload Cypress Screenshots
        uses: actions/upload-artifact@v4
        with:
          name: cypress-screenshots
          path: frontend/cypress/screenshots

      - name: Upload Cypress Videos
        uses: actions/upload-artifact@v4
        with:
          name: cypress-videos
          path: frontend/cypress/videos
